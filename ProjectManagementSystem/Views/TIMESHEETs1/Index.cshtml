            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Last_update)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Last_update_by)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DELIVERABLE.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMPLOYEE.F_name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Timesheet_ID }) |
